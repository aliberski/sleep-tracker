{
  "name": "sleepTracker",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "rr": "adb shell input keyevent 82",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e": "detox test",
    "e2e:build": "detox build"
  },
  "dependencies": {
    "axios": "0.18.0",
    "formik": "1.5.1",
    "react": "16.8.3",
    "react-native": "0.59.1",
    "react-native-gesture-handler": "https://github.com/kmagiera/react-native-gesture-handler.git",
    "react-navigation": "3.5.1",
    "react-redux": "6.0.1",
    "redux": "4.0.1",
    "redux-actions": "2.6.5",
    "redux-saga": "1.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@babel/runtime": "7.3.4",
    "@types/jest": "^24.0.11",
    "@types/react": "16.8.8",
    "@types/react-native": "0.57.41",
    "@types/react-navigation": "3.0.5",
    "@types/react-redux": "7.0.5",
    "@types/react-test-renderer": "16.8.1",
    "@types/redux-actions": "2.6.0",
    "babel-jest": "24.5.0",
    "detox": "11.0.2",
    "jest": "24.5.0",
    "metro-react-native-babel-preset": "0.53.1",
    "react-native-typescript-transformer": "1.2.12",
    "react-test-renderer": "16.8.5",
    "tslint": "5.14.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.3.3333"
  },
  "detox": {
    "test-runner": "jest",
    "specs": "e2e",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/sleepTracker/Build/Products/Debug-iphonesimulator/sleepTracker.app",
        "build": "xcodebuild -project ios/sleepTracker.xcodeproj -UseNewBuildSystem=NO -scheme sleepTracker -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone X"
      }
    }
  }
}
